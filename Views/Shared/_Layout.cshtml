<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DulceSaborOnline___WEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/arreglos.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" asp-append-version="true"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" asp-append-version="true"/>

    <link rel="stylesheet" href="~/DulceSaborOnline___WEB.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar fixed-top" style="background-color: #EEE8AA;">
            <div class="container-fluid">
                <div class="container d-flex">
                    <a class="nav-link active mx-3" style="padding-left: 150px;" aria-current="page" asp-area="" asp-controller="Home" asp-action="">Inicio</a>
                    <a class="nav-link mx-3" asp-area="" asp-controller="Home" asp-action="combos">Combos</a>
                    <div class="dropdown mx-3">
                        <a class="nav-link dropdown-toggle" style="padding-right:100px;" role="button" id="comidasDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Comidas
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="comidasDropdown">
                            <li><a class="dropdown-item" href="#">Platos Fuertes</a></li>
                            <li><a class="dropdown-item" href="#">Bebidas</a></li>
                            <li><a class="dropdown-item" href="#">Postres</a></li>
                        </ul>
                    </div>

                    <div>
                        <strong style="font-size: xx-large;">Dulce Sabor</strong>
                    </div>

                    <div class="icon-container" style="margin-left: 310px;">
                        <!-- Utilizamos ml-auto para mover el contenedor de iconos hacia la derecha -->
                        @{
                            var usuarioCookie = Context.Request.Cookies["UsuarioCookie"];
                            var idUsuarioNombreArray = usuarioCookie?.Split('|');
                            var idUsuario = idUsuarioNombreArray?[0];
                            var nombreUsuario = idUsuarioNombreArray?[1];
                        }
                        @if (nombreUsuario != null)
                        {
                            <a class="bi bi-person-square bi-lg text-dark text-decoration-none" style="font-size: 2rem; margin-right: 10px;" asp-area="" asp-controller="DulceSabor" asp-action="login" asp-route-id="@idUsuario">@nombreUsuario</a>
                        }
                        else
                        {
                            <a class="bi bi-person-square bi-lg text-dark text-decoration-none" style="font-size: 2rem; margin-right: 10px;" asp-area="" asp-controller="DulceSabor" asp-action="login" >Login</a>

                        }
                        <a class="bi bi-clock-history bi-lg text-dark  text-decoration-none" style="font-size: 2rem; margin-right: 10px;" asp-area="" asp-controller="Home" asp-action="Historial"></a>
                        <a class="bi bi-coin bi-lg text-dark text-decoration-none" style="font-size: 2rem; margin-right: 0%;"></a>
                    </div>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Offcanvas</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Combos</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Comidas
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Platos Fuertes</a></li>
                                    <li><a class="dropdown-item" href="#">Bebidas</a></li>
                                    <li><a class="dropdown-item" href="#">Postres</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer container my-5">
        <p>&copy; 2024 Mi Sitio Web</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>
    <script src="~/js/foto.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
